# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

GET     /allQuestions               controllers.QuestionController.retrieveAllQuestions
GET     /question/:id               controllers.QuestionController.retrieveQuestion(id: Long)
GET     /addQuestion/:text          controllers.QuestionController.createOrUpdateQuestion(text: String)
GET     /deleteQuestion/:id         controllers.QuestionController.deleteQuestion(id: Long)

GET     /get_all_categories         controllers.CategoryController.retrieveAllCategories
GET     /category/:id               controllers.CategoryController.retrieveCategory(id: Long)
POST    /api/addc                   controllers.CategoryController.createOrUpdateCategory()
GET     /deleteCategory/:id         controllers.CategoryController.deleteCategory(id: Long)

#GET     /allProducts                controllers.CategoryController.retrieveAllProducts
#GET     /product/:id                controllers.CategoryController.retrieveProduct(id: Long)
#GET     /addProduct/:name&:price    controllers.CategoryController.createOrUpdateProduct(name: String, price :Float)
#GET     /deleteProduct/:id          controllers.CategoryController.deleteProduct(id: Long)


GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
