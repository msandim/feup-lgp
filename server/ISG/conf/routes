# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                                       controllers.HomeController.index

GET     /api/allQuestions                       controllers.QuestionController.retrieveAllQuestions
GET     /api/question/:id                       controllers.QuestionController.retrieveQuestion(id: Long)
POST     /api/addQuestion                        controllers.QuestionController.createOrUpdateQuestion
GET     /api/deleteQuestion/:id                 controllers.QuestionController.deleteQuestion(id: Long)

# Get the next question
POST    /api/getNextQuestion                    controllers.QuestionController.getNextQuestion

GET     /api/getQuestionsByCategory             controllers.QuestionController.getQuestionByCategory(category: String)

GET     /api/allCategories                      controllers.CategoryController.retrieveAllCategories
GET     /api/category/:id                       controllers.CategoryController.retrieveCategory(id: Long)
GET     /api/addCategory                        controllers.CategoryController.createOrUpdateCategory(name: String, code: String)
GET     /api/deleteCategory/:id                 controllers.CategoryController.deleteCategory(id: Long)

#GET     /allProducts                controllers.CategoryController.retrieveAllProducts
#GET     /product/:id                controllers.CategoryController.retrieveProduct(id: Long)
#GET     /addProduct/:name&:price    controllers.CategoryController.createOrUpdateProduct(name: String, price :Float)
#GET     /deleteProduct/:id          controllers.CategoryController.deleteProduct(id: Long)


GET     /message                               controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                          controllers.Assets.versioned(path="/public", file: Asset)
