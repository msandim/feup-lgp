# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                                       controllers.HomeController.index

POST    /api/addQuestions                       controllers.QuestionController.createOrUpdateQuestion
POST    /api/getNextQuestion                    controllers.QuestionController.getNextQuestion
#POST    /api/sendFeedback/                      controllers.QuestionController.sendFeedback
GET     /api/questionsByCategory                controllers.QuestionController.getQuestionsByCategory(code: String)

GET     /api/allCategories                      controllers.CategoryController.retrieveAllCategories
POST    /api/addCategory                        controllers.CategoryController.createCategory(name: String, code: String)

GET     /api/productsByCategory                 controllers.ProductController.getProductsByCategory(code: String)

#GET     /allProducts                controllers.CategoryController.retrieveAllProducts
#GET     /product/:id                controllers.CategoryController.retrieveProduct(id: Long)
#GET     /addProduct/:name&:price    controllers.CategoryController.createOrUpdateProduct(name: String, price :Float)
#GET     /deleteProduct/:id          controllers.CategoryController.deleteProduct(id: Long)


GET     /message                               controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                          controllers.Assets.versioned(path="/public", file: Asset)
